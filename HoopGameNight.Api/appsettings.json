{
  "ConnectionStrings": {
    "DefaultConnection": "Will be loaded from environment variables",
    "MySqlConnection": "Will be loaded from environment variables"
  },
  "ApiSettings": {
    "Title": "Hoop Game Night API",
    "Version": "v1",
    "Description": "API completa para acompanhamento de jogos da NBA",
    "Contact": {
      "Name": "Hoop Game Night Team",
      "Email": "Lucas@hoopgamenight.com"
    }
  },
  "Database": {
    "CommandTimeout": 30,
    "EnableRetryOnFailure": true,
    "MaxRetryCount": 3,
    "RequiredForStartup": false,
    "RetryDelayMs": 2000
  },
  "ExternalApis": {
    "BallDontLie": {
      "BaseUrl": "https://api.balldontlie.io",
      "ApiKey": "Will be loaded from environment variables",
      "Timeout": 30,
      "RateLimit": 60,
      "RetryPolicy": {
        "RetryCount": 3,
        "WaitAndRetry": [ 1, 2, 4 ]
      }
    }
  },
  "RateLimit": {
    "PermitLimit": 100,
    "QueueLimit": 10,
    "WindowMinutes": 1
  },
  "Cors": {
    "PolicyName": "HoopGameNightPolicy",
    "AllowedOrigins": [ "http://localhost:4200", "https://localhost:4200" ],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE" ],
    "AllowedHeaders": [ "*" ],
    "AllowCredentials": true
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning",
        "HoopGameNight": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext:l} {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/app-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {Level:u3}] {SourceContext:l} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "HoopGameNight.Infrastructure.ExternalServices": "Debug",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Sync": {
    "ApiKey": "Will be loaded from environment variables",
    "EnableAutoSync": true,
    "SyncIntervalMinutes": 60,
    "MaxRetries": 3,
    "RetryDelaySeconds": 5,
    "BatchSize": 100,
    "PlayerStats": {
      "Enabled": true,
      "SyncIntervalHours": 6,
      "MaxPlayersPerSync": 50,
      "DelayBetweenRequestsMs": 3000,
      "SyncTodayGames": true,
      "SyncRecentGames": true,
      "UpdateCareerStats": true,
      "RecentGamesToSync": 5
    }
  },
  "Cache": {
    "DefaultExpirationMinutes": 30,
    "CompactionPercentage": 0.25,
    "ExpirationScanFrequencyMinutes": 5,
    "TeamsExpirationHours": 24,
    "GamesExpirationMinutes": 5
  },
  "AllowedHosts": "*"
}